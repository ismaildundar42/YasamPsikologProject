@model YasamPsikologProject.WebUi.Models.DTOs.WorkingHourDto
@{
    ViewData["Title"] = "Çalışma Saati Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex align-items-center">
                        <h6 class="mb-0">Çalışma Saati Düzenle</h6>
                        <a asp-action="Index" asp-route-psychologistId="@Model.PsychologistId" class="btn btn-outline-secondary btn-sm ms-auto">
                            <i class="fas fa-arrow-left me-1"></i> Geri Dön
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <span class="alert-icon"><i class="fas fa-exclamation-circle"></i></span>
                            <span class="alert-text">@TempData["ErrorMessage"]</span>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="PsychologistId" class="form-control-label">Psikolog <span class="text-danger">*</span></label>
                                    <select asp-for="PsychologistId" asp-items="ViewBag.Psychologists" class="form-select" required disabled>
                                        <option value="">Psikolog Seçiniz</option>
                                    </select>
                                    <input type="hidden" asp-for="PsychologistId" />
                                    <span asp-validation-for="PsychologistId" class="text-danger text-xs"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DayOfWeek" class="form-control-label">Gün <span class="text-danger">*</span></label>
                                    <select asp-for="DayOfWeek" asp-items="ViewBag.DaysOfWeek" class="form-select" required>
                                        <option value="">Gün Seçiniz</option>
                                    </select>
                                    <span asp-validation-for="DayOfWeek" class="text-danger text-xs"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="StartTime" class="form-control-label">Başlangıç Saati <span class="text-danger">*</span></label>
                                    <input asp-for="StartTime" type="time" class="form-control" required />
                                    <span asp-validation-for="StartTime" class="text-danger text-xs"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="EndTime" class="form-control-label">Bitiş Saati <span class="text-danger">*</span></label>
                                    <input asp-for="EndTime" type="time" class="form-control" required />
                                    <span asp-validation-for="EndTime" class="text-danger text-xs"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="BreakStartTime" class="form-control-label">Mola Başlangıç</label>
                                    <input asp-for="BreakStartTime" type="time" class="form-control" />
                                    <span asp-validation-for="BreakStartTime" class="text-danger text-xs"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="BreakEndTime" class="form-control-label">Mola Bitiş</label>
                                    <input asp-for="BreakEndTime" type="time" class="form-control" />
                                    <span asp-validation-for="BreakEndTime" class="text-danger text-xs"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Notes" class="form-control-label">Notlar</label>
                                    <textarea asp-for="Notes" class="form-control" rows="3" placeholder="İsteğe bağlı notlar..."></textarea>
                                    <span asp-validation-for="Notes" class="text-danger text-xs"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-check form-switch">
                                    <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsAvailable" class="form-check-label">Aktif</label>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-1"></i> Güncelle
                                </button>
                                <a asp-action="Index" asp-route-psychologistId="@Model.PsychologistId" class="btn btn-outline-secondary">
                                    <i class="fas fa-times me-1"></i> İptal
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
