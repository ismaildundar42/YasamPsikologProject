@model List<YasamPsikologProject.WebUi.Models.DTOs.SuperAdminDto>
@{
    Layout = "_AdminLayout";
    ViewData["PageTitle"] = "Süper Admin Yönetimi";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Süper Adminler</h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> Yeni Süper Admin Ekle
                    </a>
                </div>
            </div>
            <div class="card-body">
                <table id="superAdminTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Ad Soyad</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>Cinsiyet</th>
                            <th>Durum</th>
                            <th>Kayıt Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var admin in Model)
                        {
                            <tr>
                                <td>@admin.Id</td>
                                <td>@admin.FirstName @admin.LastName</td>
                                <td>@admin.Email</td>
                                <td>@admin.PhoneNumber</td>
                                <td>
                                    @if (admin.Gender == 0)
                                    {
                                        <span class="badge badge-info">Erkek</span>
                                    }
                                    else if (admin.Gender == 1)
                                    {
                                        <span class="badge badge-pink">Kadın</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">Belirtilmemiş</span>
                                    }
                                </td>
                                <td>
                                    @if (admin.IsActive)
                                    {
                                        <span class="badge badge-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Pasif</span>
                                    }
                                </td>
                                <td>@admin.CreatedAt.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@admin.Id" class="btn btn-info btn-sm" title="Detaylar">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@admin.Id" class="btn btn-primary btn-sm" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-danger btn-sm btn-delete" data-id="@admin.Id" title="Sil">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // DataTable
            var table = $('#superAdminTable').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json"
                }
            });

            // Delete button click
            $('.btn-delete').on('click', function() {
                var adminId = $(this).data('id');
                
                Swal.fire({
                    title: 'Emin misiniz?',
                    html: "Bu süper admin silinecek!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Evet, Sil!',
                    cancelButtonText: 'İptal'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Form oluştur ve submit et
                        var form = $('<form>', {
                            'method': 'POST',
                            'action': '@Url.Action("Delete", "SuperAdmin")/' + adminId
                        });
                        
                        // Anti-forgery token ekle
                        var token = $('input[name="__RequestVerificationToken"]').val();
                        if (!token) {
                            token = '@Html.AntiForgeryToken()'.match(/value="([^"]+)"/)[1];
                        }
                        form.append($('<input>', {
                            'type': 'hidden',
                            'name': '__RequestVerificationToken',
                            'value': token
                        }));
                        
                        $('body').append(form);
                        form.submit();
                    }
                });
            });

            // Success/Error messages
            @if (TempData["SuccessMessage"] != null)
            {
                <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Başarılı!',
                    html: '@Html.Raw(TempData["SuccessMessage"])',
                    timer: 3000
                });
                </text>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <text>
                Swal.fire({
                    icon: 'error',
                    title: 'Hata!',
                    html: '@Html.Raw(TempData["ErrorMessage"])'
                });
                </text>
            }
        });
    </script>
}
