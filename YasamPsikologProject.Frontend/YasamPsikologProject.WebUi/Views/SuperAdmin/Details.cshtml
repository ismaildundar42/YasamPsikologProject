@model YasamPsikologProject.WebUi.Models.DTOs.SuperAdminDto
@{
    Layout = "_AdminLayout";
    ViewData["PageTitle"] = "Süper Admin Detayları";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card card-danger">
            <div class="card-header">
                <h3 class="card-title">Süper Admin Detayları</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Ad:</label>
                            <p class="form-control-static">@Model.FirstName</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Soyad:</label>
                            <p class="form-control-static">@Model.LastName</p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email:</label>
                            <p class="form-control-static">@Model.Email</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Telefon:</label>
                            <p class="form-control-static">@Model.PhoneNumber</p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Cinsiyet:</label>
                            <p class="form-control-static">
                                @if (Model.Gender == 0)
                                {
                                    <span class="badge badge-info">Erkek</span>
                                }
                                else if (Model.Gender == 1)
                                {
                                    <span class="badge badge-pink">Kadın</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Belirtilmemiş</span>
                                }
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Durum:</label>
                            <p class="form-control-static">
                                @if (Model.IsActive)
                                {
                                    <span class="badge badge-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Pasif</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Kayıt Tarihi:</label>
                            <p class="form-control-static">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
                <a asp-action="Index" class="btn btn-default">
                    <i class="fas fa-arrow-left"></i> Geri
                </a>
            </div>
        </div>
    </div>
</div>
