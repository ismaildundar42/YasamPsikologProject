@model YasamPsikologProject.WebUi.Models.DTOs.PsychologistDto
@{
    ViewData["Title"] = "Profil Düzenle";
    Layout = "~/Views/Shared/_PsychologistLayout.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-user-edit"></i> Profil Bilgilerini Düzenle
                </h3>
            </div>
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserId" />
                
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                    
                    <div asp-validation-summary="All" class="text-danger"></div>
                    
                    <!-- Kişisel Bilgiler -->
                    <h5 class="mb-3"><i class="fas fa-user"></i> Kişisel Bilgiler</h5>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Ad *</label>
                                <input type="text" class="form-control" name="User.FirstName" value="@Model?.User?.FirstName" 
                                       data-val="true" data-val-required="Ad alanı zorunludur" required>
                                <span class="text-danger field-validation-valid" data-valmsg-for="User.FirstName" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Soyad *</label>
                                <input type="text" class="form-control" name="User.LastName" value="@Model?.User?.LastName" 
                                       data-val="true" data-val-required="Soyad alanı zorunludur" required>
                                <span class="text-danger field-validation-valid" data-valmsg-for="User.LastName" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Email *</label>
                                <input type="email" class="form-control" name="User.Email" value="@Model?.User?.Email" 
                                       data-val="true" data-val-required="Email alanı zorunludur" 
                                       data-val-email="Geçerli bir email adresi giriniz" required>
                                <span class="text-danger field-validation-valid" data-valmsg-for="User.Email" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Telefon *</label>
                                <input type="tel" class="form-control" name="User.PhoneNumber" value="@Model?.User?.PhoneNumber" 
                                       pattern="0[0-9]{10}" placeholder="05551234567"
                                       data-val="true" data-val-required="Telefon alanı zorunludur" required>
                                <small class="form-text text-muted">Format: 05551234567 (11 hane)</small>
                                <span class="text-danger field-validation-valid" data-valmsg-for="User.PhoneNumber" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                    </div>

                    <hr>
                    <h5 class="mb-3"><i class="fas fa-cog"></i> Görsel Ayarlar</h5>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Takvim Rengi *</label>
                                <input type="color" class="form-control" asp-for="CalendarColor" 
                                       value="@(Model?.CalendarColor ?? "#4CAF50")" required>
                                <small class="form-text text-muted">Randevularınızda görünecek renk</small>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> 
                        <strong>Not:</strong> Şifrenizi değiştirmek için <a asp-action="ChangePassword" class="alert-link">Şifre Değiştir</a> sayfasını kullanın.
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Form submit handler
            $('form').on('submit', function(e) {
                var form = $(this);
                
                // Client-side validation check
                if (!form.valid()) {
                    e.preventDefault();
                    toastr.error('Lütfen tüm alanları doğru şekilde doldurunuz.');
                    return false;
                }
                
                // Disable submit button
                var submitBtn = form.find('button[type="submit"]');
                submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Kaydediliyor...');
            });

            // Telefon input için mask
            $('input[name="User.PhoneNumber"]').on('input', function() {
                var value = $(this).val().replace(/\D/g, '');
                if (value.length > 11) {
                    value = value.substring(0, 11);
                }
                $(this).val(value);
            });
        });
    </script>
}
