@model YasamPsikologProject.WebUi.Models.ViewModels.PsychologistDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_PsychologistLayout.cshtml";
}

<!-- İstatistik Kartları -->
<div class="row">
    <!-- Toplam Randevu -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-info">
            <div class="inner">
                <h3>@Model.TotalAppointments</h3>
                <p>Toplam Randevu</p>
            </div>
            <div class="icon">
                <i class="fas fa-calendar-check"></i>
            </div>
            <a asp-controller="PsychologistAppointment" asp-action="Index" class="small-box-footer">
                Detaylar <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <!-- Bugünkü Randevular -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-success">
            <div class="inner">
                <h3>@Model.TodayAppointments</h3>
                <p>Bugünkü Randevular</p>
            </div>
            <div class="icon">
                <i class="fas fa-calendar-day"></i>
            </div>
            <a asp-controller="PsychologistAppointment" asp-action="Calendar" class="small-box-footer">
                Takvim <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <!-- Bekleyen Randevular -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@Model.PendingAppointments</h3>
                <p>Bekleyen Randevular</p>
            </div>
            <div class="icon">
                <i class="fas fa-clock"></i>
            </div>
            <a asp-controller="PsychologistAppointment" asp-action="Index" class="small-box-footer">
                Detaylar <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <!-- Danışan Sayısı -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-primary">
            <div class="inner">
                <h3>@Model.TotalClients</h3>
                <p>Danışanlarım</p>
            </div>
            <div class="icon">
                <i class="fas fa-users"></i>
            </div>
            <a asp-controller="PsychologistClient" asp-action="Index" class="small-box-footer">
                Listele <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
</div>

<!-- Psikolog Bilgileri -->
@if (Model.PsychologistInfo != null)
{
    <div class="row">
        <div class="col-md-12">
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-user-md mr-2"></i>
                        Profil Bilgilerim
                    </h3>
                    <div class="card-tools">
                        <a asp-controller="PsychologistProfile" asp-action="Edit" class="btn btn-sm btn-primary">
                            <i class="fas fa-edit"></i> Düzenle
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Ad Soyad:</strong> @Model.PsychologistInfo.User?.FirstName @Model.PsychologistInfo.User?.LastName</p>
                            <p><strong>E-posta:</strong> @Model.PsychologistInfo.User?.Email</p>
                            <p><strong>Telefon:</strong> @Model.PsychologistInfo.User?.PhoneNumber</p>
                        </div>
                        <div class="col-md-6">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    <!-- Bugünkü Randevular -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header border-0">
                <h3 class="card-title">
                    <i class="fas fa-calendar-day mr-2"></i>
                    Bugünkü Randevular
                </h3>
                <div class="card-tools">
                    <a asp-controller="PsychologistAppointment" asp-action="Calendar" class="btn btn-sm btn-primary">
                        <i class="fas fa-calendar"></i> Takvim
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                @if (Model.TodayAppointmentsList.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-valign-middle">
                            <thead>
                                <tr>
                                    <th>Saat</th>
                                    <th>Danışan</th>
                                    <th>Süre</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var appointment in Model.TodayAppointmentsList)
                                {
                                    <tr>
                                        <td>@appointment.AppointmentDate.ToString("HH:mm")</td>
                                        <td>@appointment.ClientName</td>
                                        <td>@appointment.Duration dk</td>
                                        <td>
                                            @if (appointment.Status == "Pending")
                                            {
                                                <span class="badge badge-warning">Bekliyor</span>
                                            }
                                            else if (appointment.Status == "Confirmed")
                                            {
                                                <span class="badge badge-success">Onaylandı</span>
                                            }
                                            else if (appointment.Status == "Completed")
                                            {
                                                <span class="badge badge-info">Tamamlandı</span>
                                            }
                                            else if (appointment.Status == "Cancelled")
                                            {
                                                <span class="badge badge-danger">İptal</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-3 text-center text-muted">
                        <i class="fas fa-calendar-times fa-3x mb-3"></i>
                        <p>Bugün için randevunuz bulunmamaktadır.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Son Randevular -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header border-0">
                <h3 class="card-title">
                    <i class="fas fa-history mr-2"></i>
                    Son Randevular
                </h3>
                <div class="card-tools">
                    <a asp-controller="PsychologistAppointment" asp-action="Index" class="btn btn-sm btn-primary">
                        <i class="fas fa-list"></i> Tümü
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                @if (Model.RecentAppointments.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-valign-middle">
                            <thead>
                                <tr>
                                    <th>Tarih</th>
                                    <th>Danışan</th>
                                    <th>Durum</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var appointment in Model.RecentAppointments)
                                {
                                    <tr>
                                        <td>@appointment.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>@appointment.ClientName</td>
                                        <td>
                                            @if (appointment.Status == "Pending")
                                            {
                                                <span class="badge badge-warning">Bekliyor</span>
                                            }
                                            else if (appointment.Status == "Confirmed")
                                            {
                                                <span class="badge badge-success">Onaylandı</span>
                                            }
                                            else if (appointment.Status == "Completed")
                                            {
                                                <span class="badge badge-info">Tamamlandı</span>
                                            }
                                            else if (appointment.Status == "Cancelled")
                                            {
                                                <span class="badge badge-danger">İptal</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="PsychologistAppointment" asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-3 text-center text-muted">
                        <i class="fas fa-inbox fa-3x mb-3"></i>
                        <p>Henüz randevunuz bulunmamaktadır.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
