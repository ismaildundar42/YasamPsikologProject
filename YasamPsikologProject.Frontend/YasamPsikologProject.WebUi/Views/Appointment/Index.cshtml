@model List<YasamPsikologProject.WebUi.Models.DTOs.AppointmentDto>
@{
    Layout = "_AdminLayout";
    ViewData["PageTitle"] = "Randevu Yönetimi";
}

<div class="row mb-3">
    <div class="col-12">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Yeni Randevu
        </a>
        <a asp-action="Calendar" class="btn btn-primary">
            <i class="fas fa-calendar-alt"></i> Takvim Görünümü
        </a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Randevu Listesi</h3>
            </div>
            <div class="card-body">
                <table id="appointmentTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tarih</th>
                            <th>Saat</th>
                            <th>Danışan</th>
                            <th>Psikolog</th>
                            <th>Süre</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var appointment in Model)
                        {
                            <tr>
                                <td>@appointment.Id</td>
                                <td>@appointment.AppointmentDate.ToString("dd.MM.yyyy")</td>
                                <td>@appointment.AppointmentDate.ToString("HH:mm")</td>
                                <td>@appointment.Client?.User?.FirstName @appointment.Client?.User?.LastName</td>
                                <td>
                                    <span class="badge" style="background-color: @appointment.Psychologist?.CalendarColor; color: white;">
                                        @appointment.Psychologist?.User?.FirstName @appointment.Psychologist?.User?.LastName
                                    </span>
                                </td>
                                <td>@appointment.Duration</td>
                                <td>
                                    @switch (appointment.Status)
                                    {
                                        case "Pending":
                                            <span class="badge badge-warning">Bekliyor</span>
                                            break;
                                        case "Confirmed":
                                            <span class="badge badge-success">Onaylandı</span>
                                            break;
                                        case "Completed":
                                            <span class="badge badge-info">Tamamlandı</span>
                                            break;
                                        case "Cancelled":
                                            <span class="badge badge-danger">İptal</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-info btn-sm" title="Detaylar">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        @if (appointment.Status != "Cancelled" && appointment.Status != "Completed")
                                        {
                                            <button type="button" class="btn btn-danger btn-sm btn-cancel" data-id="@appointment.Id" title="İptal Et">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#appointmentTable').DataTable({
                responsive: true,
                pageLength: 10,
                order: [[1, 'desc'], [2, 'desc']],
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json'
                }
            });

            $(document).on('click', '.btn-cancel', function() {
                var id = $(this).data('id');
                
                Swal.fire({
                    title: 'Randevu İptali',
                    input: 'textarea',
                    inputLabel: 'İptal sebebini giriniz',
                    inputPlaceholder: 'İptal sebebi...',
                    showCancelButton: true,
                    confirmButtonText: 'İptal Et',
                    cancelButtonText: 'Vazgeç',
                    confirmButtonColor: '#d33',
                    inputValidator: (value) => {
                        if (!value) {
                            return 'İptal sebebi girmelisiniz!'
                        }
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '@Url.Action("Cancel")',
                            type: 'POST',
                            data: { id: id, reason: result.value },
                            success: function(response) {
                                if (response.success) {
                                    toastr.success(response.message);
                                    setTimeout(() => location.reload(), 1000);
                                } else {
                                    toastr.error(response.message);
                                }
                            },
                            error: function() {
                                toastr.error('İşlem sırasında hata oluştu.');
                            }
                        });
                    }
                });
            });

            @if (TempData["SuccessMessage"] != null)
            {
                <text>toastr.success('@TempData["SuccessMessage"]');</text>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <text>toastr.error('@TempData["ErrorMessage"]');</text>
            }
        });
    </script>
}
