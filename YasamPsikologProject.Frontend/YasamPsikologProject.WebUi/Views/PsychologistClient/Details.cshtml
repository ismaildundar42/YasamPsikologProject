@model YasamPsikologProject.WebUi.Models.DTOs.ClientDto
@{
    ViewData["Title"] = "Danışan Detayları";
    Layout = "~/Views/Shared/_PsychologistLayout.cshtml";
    var appointments = ViewBag.ClientAppointments as List<YasamPsikologProject.WebUi.Models.DTOs.AppointmentDto> ?? new List<YasamPsikologProject.WebUi.Models.DTOs.AppointmentDto>();
}

<div class="row">
    <div class="col-md-4">
        <!-- Danışan Bilgileri -->
        <div class="card card-primary card-outline">
            <div class="card-body box-profile">
                <div class="text-center">
                    <img class="profile-user-img img-fluid img-circle" src="~/img/default-avatar.png" alt="User profile picture">
                </div>

                <h3 class="profile-username text-center">@Model.User?.FirstName @Model.User?.LastName</h3>

                <p class="text-muted text-center">Danışan</p>

                <ul class="list-group list-group-unbordered mb-3">
                    <li class="list-group-item">
                        <b>E-posta</b> <a class="float-right">@Model.User?.Email</a>
                    </li>
                    <li class="list-group-item">
                        <b>Telefon</b> <a class="float-right">@Model.User?.PhoneNumber</a>
                    </li>
                    <li class="list-group-item">
                        <b>Kayıt Tarihi</b> <a class="float-right">@Model.CreatedAt.ToString("dd.MM.yyyy")</a>
                    </li>
                    <li class="list-group-item">
                        <b>Toplam Randevu</b> <a class="float-right">@appointments.Count</a>
                    </li>
                </ul>

                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <div class="alert alert-info">
                        <strong>Notlar:</strong><br />
                        @Model.Notes
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <!-- Randevu Geçmişi -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-history mr-2"></i>
                    Randevu Geçmişi
                </h3>
            </div>
            <div class="card-body">
                @if (appointments.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Tarih</th>
                                    <th>Saat</th>
                                    <th>Süre</th>
                                    <th>Durum</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var appointment in appointments)
                                {
                                    <tr>
                                        <td>@appointment.AppointmentDate.ToString("dd.MM.yyyy")</td>
                                        <td>@appointment.AppointmentDate.ToString("HH:mm")</td>
                                        <td>@appointment.Duration dk</td>
                                        <td>
                                            @if (appointment.Status == "Pending")
                                            {
                                                <span class="badge badge-warning">Bekliyor</span>
                                            }
                                            else if (appointment.Status == "Confirmed")
                                            {
                                                <span class="badge badge-success">Onaylandı</span>
                                            }
                                            else if (appointment.Status == "Completed")
                                            {
                                                <span class="badge badge-info">Tamamlandı</span>
                                            }
                                            else if (appointment.Status == "Cancelled")
                                            {
                                                <span class="badge badge-danger">İptal</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="PsychologistAppointment" asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted p-4">
                        <i class="fas fa-inbox fa-3x mb-3"></i>
                        <p>Henüz randevu bulunmamaktadır.</p>
                    </div>
                }
            </div>
        </div>

        <!-- Hızlı İşlemler -->
        <div class="card">
            <div class="card-body">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Danışan Listesi
                </a>
            </div>
        </div>
    </div>
</div>
