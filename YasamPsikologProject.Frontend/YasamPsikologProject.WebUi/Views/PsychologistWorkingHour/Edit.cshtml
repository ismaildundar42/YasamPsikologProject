@model YasamPsikologProject.WebUi.Models.DTOs.WorkingHourDto
@{
    ViewData["Title"] = "Çalışma Saati Düzenle";
    Layout = "~/Views/Shared/_PsychologistLayout.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card card-warning">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-edit mr-2"></i>
                    Çalışma Saati Düzenle
                </h3>
            </div>
            <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="PsychologistId" />
                
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="DayOfWeek">Gün <span class="text-danger">*</span></label>
                        <select asp-for="DayOfWeek" class="form-control" asp-items="ViewBag.DaysOfWeek">
                            <option value="">Gün seçiniz...</option>
                        </select>
                        <span asp-validation-for="DayOfWeek" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="StartTime">Başlangıç Saati <span class="text-danger">*</span></label>
                                <input asp-for="StartTime" type="time" class="form-control" />
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="EndTime">Bitiş Saati <span class="text-danger">*</span></label>
                                <input asp-for="EndTime" type="time" class="form-control" />
                                <span asp-validation-for="EndTime" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="BreakStartTime">Mola Başlangıç</label>
                                <input asp-for="BreakStartTime" type="time" class="form-control" />
                                <span asp-validation-for="BreakStartTime" class="text-danger"></span>
                                <small class="form-text text-muted">İsteğe bağlı</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="BreakEndTime">Mola Bitiş</label>
                                <input asp-for="BreakEndTime" type="time" class="form-control" />
                                <span asp-validation-for="BreakEndTime" class="text-danger"></span>
                                <small class="form-text text-muted">İsteğe bağlı</small>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="custom-control custom-switch">
                            <input type="checkbox" asp-for="IsAvailable" class="custom-control-input" id="isAvailableSwitch">
                            <label class="custom-control-label" for="isAvailableSwitch">
                                Aktif
                            </label>
                        </div>
                        <small class="form-text text-muted">Bu çalışma saati randevu alımı için aktif olsun mu?</small>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save"></i> Güncelle
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
