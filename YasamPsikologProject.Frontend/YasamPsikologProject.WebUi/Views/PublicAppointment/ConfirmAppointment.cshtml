@model YasamPsikologProject.WebUi.Models.ViewModels.AppointmentConfirmViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Randevu Onayı - Yaşam Psikoloji</title>
    <link rel="stylesheet" href="~/css/appointment-theme.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
</head>
<body>

<div class="appointment-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Logo -->
                <div class="text-center mb-4 fade-in">
                    <img src="~/logo/yasam_logo.png" alt="Yaşam Psikoloji" class="appointment-logo-small mb-3" />
                </div>
                
                <!-- Başlık -->
                <div class="text-center mb-4 fade-in">
                    <h1 class="text-primary" style="font-size: 2.5rem; font-weight: 700;">
                        <i class="fas fa-check-circle"></i> Randevu Onayı
                    </h1>
                    <p class="text-muted" style="font-size: 1.1rem;">Randevu bilgilerinizi kontrol edin ve onaylayın</p>
                </div>

                <form asp-action="CreateAppointment" method="post">
                    @* Only send psychologist ID *@
                    <input type="hidden" name="PsychologistId" value="@Model.Psychologist.Id" />
                    
                    @* Appointment fields *@
                    <input type="hidden" name="AppointmentDate" value="@Model.AppointmentDate.ToString("o")" />
                    <input type="hidden" name="Duration" value="@Model.Duration" />
                    <input type="hidden" name="IsOnline" value="@Model.IsOnline" />

                    <!-- Psikolog Bilgileri -->
                    <div class="appointment-card fade-in">
                        <h3 class="text-primary mb-3">
                            <i class="fas fa-user-md"></i> Psikolog Bilgileri
                        </h3>
                        <div class="d-flex align-items-center gap-3">
                            <div class="psychologist-avatar" style="width: 80px; height: 80px; background: @(Model.Psychologist.CalendarColor ?? "#4CAF50"); color: white; display: flex; align-items: center; justify-content: center; font-size: 1.8rem; font-weight: 700;">
                                @(Model.Psychologist.User?.FirstName?[0])@(Model.Psychologist.User?.LastName?[0])
                            </div>
                            <div>
                                <h4 class="mb-1">@Model.Psychologist.User?.FirstName @Model.Psychologist.User?.LastName</h4>

                            </div>
                        </div>
                    </div>

                    <!-- Randevu Detayları -->
                    <div class="appointment-card fade-in">
                        <h3 class="text-primary mb-3">
                            <i class="fas fa-calendar-alt"></i> Randevu Detayları
                        </h3>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center gap-2">
                                    <i class="fas fa-calendar text-primary" style="font-size: 1.5rem;"></i>
                                    <div>
                                        <small class="text-muted">Tarih</small>
                                        <p class="mb-0" style="font-weight: 600;">@Model.AppointmentDate.ToString("dd MMMM yyyy, dddd", new System.Globalization.CultureInfo("tr-TR"))</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center gap-2">
                                    <i class="fas fa-clock text-primary" style="font-size: 1.5rem;"></i>
                                    <div>
                                        <small class="text-muted">Saat</small>
                                        <p class="mb-0" style="font-weight: 600;">@Model.AppointmentDate.ToString("HH:mm")</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center gap-2">
                                    <i class="fas fa-hourglass-half text-primary" style="font-size: 1.5rem;"></i>
                                    <div>
                                        <small class="text-muted">Süre</small>
                                        <p class="mb-0" style="font-weight: 600;">@Model.Duration dakika</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center gap-2">
                                    <i class="fas @(Model.IsOnline ? "fa-video" : "fa-user") text-primary" style="font-size: 1.5rem;"></i>
                                    <div>
                                        <small class="text-muted">Randevu Tipi</small>
                                        <p class="mb-0" style="font-weight: 600;">@(Model.IsOnline ? "Online" : "Yüz Yüze")</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- İletişim Bilgileri -->
                    <div class="appointment-card fade-in">
                        <h3 class="text-primary mb-3">
                            <i class="fas fa-user"></i> İletişim Bilgileriniz
                        </h3>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-group-appointment">
                                    <label class="form-label-appointment">
                                        <i class="fas fa-user"></i> Ad *
                                    </label>
                                    <input type="text" 
                                           name="clientFirstName" 
                                           id="clientFirstName"
                                           class="form-control-appointment" 
                                           placeholder="Adınız"
                                           minlength="2"
                                           maxlength="50"
                                           pattern="[a-zA-ZğüşıöçĞÜŞİÖÇ\s]+"
                                           title="Sadece harf karakterleri girebilirsiniz (en az 2, en fazla 50 karakter)"
                                           required />
                                    <small class="text-danger d-none" id="firstNameError"></small>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-group-appointment">
                                    <label class="form-label-appointment">
                                        <i class="fas fa-user"></i> Soyad *
                                    </label>
                                    <input type="text" 
                                           name="clientLastName" 
                                           id="clientLastName"
                                           class="form-control-appointment" 
                                           placeholder="Soyadınız"
                                           minlength="2"
                                           maxlength="50"
                                           pattern="[a-zA-ZğüşıöçĞÜŞİÖÇ\s]+"
                                           title="Sadece harf karakterleri girebilirsiniz (en az 2, en fazla 50 karakter)"
                                           required />
                                    <small class="text-danger d-none" id="lastNameError"></small>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-group-appointment">
                                    <label class="form-label-appointment">
                                        <i class="fas fa-envelope"></i> E-posta *
                                    </label>
                                    <input type="email" 
                                           name="clientEmail" 
                                           id="clientEmail"
                                           class="form-control-appointment" 
                                           placeholder="ornek@email.com"
                                           title="Geçerli bir e-posta adresi giriniz (örn: ornek@email.com)"
                                           required />
                                    <small class="text-danger d-none" id="emailError"></small>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-group-appointment">
                                    <label class="form-label-appointment">
                                        <i class="fas fa-phone"></i> Telefon *
                                    </label>
                                    <input type="tel" 
                                           name="clientPhone" 
                                           id="clientPhone"
                                           class="form-control-appointment" 
                                           placeholder="05551234567"
                                           pattern="0[0-9]{10}"
                                           minlength="11"
                                           maxlength="11"
                                           title="Telefon numarası 11 hane olmalı ve 0 ile başlamalıdır (örn: 05551234567)"
                                           required />
                                    <small class="text-muted d-block">Format: 05551234567 (11 hane)</small>
                                    <small class="text-danger d-none" id="phoneError"></small>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-group-appointment">
                                    <label class="form-label-appointment">
                                        <i class="fas fa-bell"></i> Bildirim Tercihi *
                                    </label>
                                    <select name="preferredNotification" class="form-control-appointment" required>
                                        <option value="WhatsApp" selected>WhatsApp</option>
                                        <option value="Email">E-posta</option>
                                    </select>
                                    <small class="text-muted">Randevu bilgilendirmeleri için tercih edilen kanal</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Danışan Notları -->
                    <div class="appointment-card fade-in">
                        <h3 class="text-primary mb-3">
                            <i class="fas fa-sticky-note"></i> Notlarınız (Opsiyonel)
                        </h3>
                        <div class="form-group-appointment">
                            <label class="form-label-appointment">
                                Psikoloğunuzla paylaşmak istediğiniz notlar
                            </label>
                            <textarea name="clientNotes" 
                                      class="form-control-appointment" 
                                      rows="4" 
                                      placeholder="Randevunuzla ilgili belirtmek istediğiniz özel durumlar varsa buraya yazabilirsiniz..."></textarea>
                        </div>
                    </div>

                    <!-- KVKK Onayı -->
                    <div class="appointment-card fade-in">
                        <h3 class="text-primary mb-3">
                            <i class="fas fa-shield-alt"></i> KVKK Onayı
                        </h3>
                        <div class="custom-checkbox">
                            <input type="checkbox" 
                                   name="kvkkConsent" 
                                   id="kvkkConsent" 
                                   value="true"
                                   required />
                            <label for="kvkkConsent">
                                <strong>Kişisel verilerimin işlenmesine onay veriyorum.</strong>
                                <br>
                                <small class="text-muted">
                                    Randevu oluşturarak, kişisel verilerinizin KVKK kapsamında işlenmesini kabul etmiş olursunuz.
                                    Verileriniz sadece randevu yönetimi ve psikolojik danışmanlık hizmeti için kullanılacaktır.
                                </small>
                            </label>
                        </div>
                    </div>

                    <!-- Butonlar -->
                    <div class="d-flex gap-2 justify-content-between fade-in">
                        <a href="@Url.Action("SelectDateTime", new { psychologistId = Model.Psychologist.Id })" 
                           class="btn-appointment-outline" style="flex: 1;">
                            <i class="fas fa-arrow-left"></i> Geri Dön
                        </a>
                        <button type="submit" class="btn-appointment-primary" style="flex: 2;">
                            <i class="fas fa-check-circle"></i> Randevuyu Onayla
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/appointment.js"></script>
<script>
    // TempData mesajlarını göster
    @if (TempData["ErrorMessage"] != null)
    {
        <text>
        Swal.fire({
            icon: 'error',
            title: 'Randevu Oluşturulamadı',
            text: '@Html.Raw(TempData["ErrorMessage"])',
            confirmButtonText: 'Tamam',
            confirmButtonColor: '#6c5ce7'
        });
        </text>
    }

    // Form validasyonu
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.querySelector('form');
        const firstNameInput = document.getElementById('clientFirstName');
        const lastNameInput = document.getElementById('clientLastName');
        const emailInput = document.getElementById('clientEmail');
        const phoneInput = document.getElementById('clientPhone');
        
        // Telefon input mask - sadece rakam girişi
        phoneInput.addEventListener('input', function(e) {
            let value = e.target.value.replace(/[^0-9]/g, '');
            if (value.length > 11) {
                value = value.substring(0, 11);
            }
            e.target.value = value;
            
            // Gerçek zamanlı validasyon
            const phoneError = document.getElementById('phoneError');
            if (value.length > 0 && value.length < 11) {
                phoneError.textContent = 'Telefon numarası 11 hane olmalıdır';
                phoneError.classList.remove('d-none');
            } else if (value.length === 11 && !value.startsWith('0')) {
                phoneError.textContent = 'Telefon numarası 0 ile başlamalıdır';
                phoneError.classList.remove('d-none');
            } else {
                phoneError.classList.add('d-none');
            }
        });
        
        // Ad validasyonu
        firstNameInput.addEventListener('input', function(e) {
            const value = e.target.value;
            const error = document.getElementById('firstNameError');
            const regex = /^[a-zA-ZğüşıöçĞÜŞİÖÇ\s]+$/;
            
            if (value.length > 0 && !regex.test(value)) {
                error.textContent = 'Sadece harf karakterleri girebilirsiniz';
                error.classList.remove('d-none');
            } else if (value.length > 0 && value.length < 2) {
                error.textContent = 'En az 2 karakter olmalıdır';
                error.classList.remove('d-none');
            } else {
                error.classList.add('d-none');
            }
        });
        
        // Soyad validasyonu
        lastNameInput.addEventListener('input', function(e) {
            const value = e.target.value;
            const error = document.getElementById('lastNameError');
            const regex = /^[a-zA-ZğüşıöçĞÜŞİÖÇ\s]+$/;
            
            if (value.length > 0 && !regex.test(value)) {
                error.textContent = 'Sadece harf karakterleri girebilirsiniz';
                error.classList.remove('d-none');
            } else if (value.length > 0 && value.length < 2) {
                error.textContent = 'En az 2 karakter olmalıdır';
                error.classList.remove('d-none');
            } else {
                error.classList.add('d-none');
            }
        });
        
        // Email validasyonu
        emailInput.addEventListener('blur', function(e) {
            const value = e.target.value;
            const error = document.getElementById('emailError');
            const regex = /^[a-z0-9._%+-]+@@[a-z0-9.-]+\.[a-z]{2,}$/i;
            
            if (value.length > 0 && !regex.test(value)) {
                error.textContent = 'Geçerli bir e-posta adresi giriniz';
                error.classList.remove('d-none');
            } else {
                error.classList.add('d-none');
            }
        });
        
        // Form submit validasyonu
        form.addEventListener('submit', function(e) {
            let isValid = true;
            let errorMessage = '';
            
            // Ad kontrolü
            if (firstNameInput.value.trim().length < 2) {
                errorMessage += '• Ad en az 2 karakter olmalıdır\n';
                isValid = false;
            }
            
            // Soyad kontrolü
            if (lastNameInput.value.trim().length < 2) {
                errorMessage += '• Soyad en az 2 karakter olmalıdır\n';
                isValid = false;
            }
            
            // Email kontrolü
            const emailRegex = /^[a-z0-9._%+-]+@@[a-z0-9.-]+\.[a-z]{2,}$/i;
            if (!emailRegex.test(emailInput.value)) {
                errorMessage += '• Geçerli bir e-posta adresi giriniz\n';
                isValid = false;
            }
            
            // Telefon kontrolü
            if (phoneInput.value.length !== 11) {
                errorMessage += '• Telefon numarası 11 hane olmalıdır\n';
                isValid = false;
            } else if (!phoneInput.value.startsWith('0')) {
                errorMessage += '• Telefon numarası 0 ile başlamalıdır\n';
                isValid = false;
            }
            
            // KVKK kontrolü
            const kvkkConsent = document.getElementById('kvkkConsent');
            if (!kvkkConsent.checked) {
                errorMessage += '• KVKK onayı zorunludur\n';
                isValid = false;
            }
            
            if (!isValid) {
                e.preventDefault();
                Swal.fire({
                    icon: 'error',
                    title: 'Eksik veya Hatalı Bilgiler',
                    html: errorMessage.split('\n').filter(m => m).join('<br>'),
                    confirmButtonText: 'Tamam',
                    confirmButtonColor: '#6c5ce7'
                });
                return false;
            }
            
            // Form geçerliyse normal submit (loading göster)
            const submitButton = form.querySelector('button[type="submit"]');
            submitButton.disabled = true;
            submitButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Randevu Oluşturuluyor...';
        });
    });
</script>
</body>
</html>
