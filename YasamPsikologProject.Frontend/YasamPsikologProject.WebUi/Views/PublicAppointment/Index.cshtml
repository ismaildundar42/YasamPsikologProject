@model YasamPsikologProject.WebUi.Models.ViewModels.PsychologistListViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Randevu Al - Yaşam Psikoloji</title>
    <link rel="stylesheet" href="~/css/appointment-theme.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>

<div class="appointment-container">
    <div class="container">
        <!-- Logo ve Başlık -->
        <div class="text-center mb-5 fade-in">
            <img src="~/logo/yasam_logo.png" alt="Yaşam Psikoloji" class="appointment-logo mb-3" />
            <h1 class="text-primary appointment-main-title">
                Randevu Al
            </h1>
            <p class="appointment-subtitle">Size en uygun psikoloğu seçin ve randevu oluşturun</p>
        </div>

        <!-- Filtre Bölümü -->
        <div class="filter-bar fade-in">
            <form method="get" asp-action="Index">
                <div class="filter-row">
                    <!-- Arama -->
                    <div class="filter-item">
                        <label class="form-label-appointment">
                            <i class="fas fa-search"></i> Ara
                        </label>
                        <div class="search-box">
                            <i class="fas fa-search search-icon"></i>
                            <input type="text" 
                                   name="search" 
                                   class="form-control-appointment" 
                                   placeholder="İsim veya uzmanlık alanı ara..." 
                                   value="@Model.SearchTerm" />
                        </div>
                    </div>

                    <!-- Uzmanlık Alanı -->
                    <div class="filter-item">
                        <label class="form-label-appointment">
                            <i class="fas fa-briefcase"></i> Uzmanlık Alanı
                        </label>
                        <select name="specialization" class="form-control-appointment">
                            <option value="">Tümü</option>
                            @foreach (var spec in Model.Specializations)
                            {
                                <option value="@spec" selected="@(spec == Model.SpecializationFilter)">@spec</option>
                            }
                        </select>
                    </div>

                    <!-- Online Filtresi -->
                    <div class="filter-item">
                        <label class="form-label-appointment">
                            <i class="fas fa-video"></i> Randevu Tipi
                        </label>
                        <div class="custom-checkbox">
                            <input type="checkbox" 
                                   name="onlineOnly" 
                                   id="onlineOnlyFilter" 
                                   value="true" 
                                   checked="@(Model.OnlineOnly == true)" />
                            <label for="onlineOnlyFilter">Sadece Online</label>
                        </div>
                    </div>

                    <!-- Filtrele Butonu -->
                    <div class="filter-item">
                        <button type="submit" class="btn-appointment-primary" style="width: 100%;">
                            <i class="fas fa-filter"></i> Filtrele
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Psikolog Sayısı -->
        <div class="mb-3">
            <p class="text-muted">
                <i class="fas fa-info-circle"></i> 
                <strong>@Model.Psychologists.Count</strong> psikolog bulundu
            </p>
        </div>

        <!-- Psikolog Kartları -->
        @if (Model.Psychologists.Any())
        {
            <div class="psychologist-grid">
                @foreach (var psychologist in Model.Psychologists)
                {
                    <div class="psychologist-card fade-in">
                        <div class="psychologist-header" style="background: linear-gradient(135deg, @(psychologist.CalendarColor ?? "#4CAF50") 0%, #388E3C 100%);">
                            <div class="psychologist-avatar" style="background: white; color: @(psychologist.CalendarColor ?? "#4CAF50"); display: flex; align-items: center; justify-content: center; font-size: 2rem; font-weight: 700;">
                                @(psychologist.User?.FirstName?[0])@(psychologist.User?.LastName?[0])
                            </div>
                            <h3 class="psychologist-name">
                                @psychologist.User?.FirstName @psychologist.User?.LastName
                            </h3>
                            <p class="psychologist-specialization">@psychologist.Specialization</p>
                        </div>
                        <div class="psychologist-body">
                            @if (psychologist.IsOnlineConsultationAvailable)
                            {
                                <div class="psychologist-info">
                                    <i class="fas fa-video"></i>
                                    <span>Online</span>
                                </div>
                            }
                            @if (psychologist.IsInPersonConsultationAvailable)
                            {
                                <div class="psychologist-info">
                                    <i class="fas fa-user"></i>
                                    <span>Yüz Yüze</span>
                                </div>
                            }
                            <a href="@Url.Action("SelectDateTime", new { psychologistId = psychologist.Id })" 
                               class="btn-appointment-primary" 
                               style="width: 100%; text-decoration: none; display: block; text-align: center;">
                                <i class="fas fa-calendar-plus"></i> Randevu Al
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="appointment-card text-center">
                <i class="fas fa-search" style="font-size: 4rem; color: var(--primary-light); margin-bottom: 1rem;"></i>
                <h3 class="text-muted">Psikolog bulunamadı</h3>
                <p class="text-muted">Arama kriterlerinizi değiştirerek tekrar deneyin.</p>
                <a href="@Url.Action("Index")" class="btn-appointment-outline">
                    <i class="fas fa-redo"></i> Filtreleri Temizle
                </a>
            </div>
        }
    </div>
</div>

<script src="~/js/appointment.js"></script>
</body>
</html>
