<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Yaşam Psikoloji Psikolog Panel</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- AdminLTE -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.2.0/css/adminlte.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap4.min.css">
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <!-- Toastr -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <!-- Select2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css">
    <!-- Flatpickr -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    
    <style>
        .brand-link {
            background: linear-gradient(135deg, #3788D8 0%, #2c6bb8 100%);
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        .brand-link .brand-text {
            color: #fff !important;
            font-weight: 600;
        }
        .sidebar {
            background: #2c3e50;
        }
        .nav-sidebar .nav-link {
            color: #b8c7ce;
        }
        .nav-sidebar .nav-link:hover {
            background-color: rgba(255,255,255,0.05);
            color: #fff;
        }
        .nav-sidebar .nav-link.active {
            background-color: #3788D8 !important;
            color: #fff !important;
        }
        .main-header {
            border-bottom: 1px solid #dee2e6;
        }
        .card {
            box-shadow: 0 0 1px rgba(0,0,0,.125), 0 1px 3px rgba(0,0,0,.2);
            margin-bottom: 1rem;
        }
        .card-header {
            background-color: transparent;
            border-bottom: 1px solid rgba(0,0,0,.125);
        }
        .small-box {
            box-shadow: 0 0 1px rgba(0,0,0,.125), 0 1px 3px rgba(0,0,0,.2);
        }
        .btn-primary {
            background-color: #3788D8;
            border-color: #3788D8;
        }
        .btn-primary:hover {
            background-color: #2c6bb8;
            border-color: #2c6bb8;
        }
        .psychologist-badge {
            background-color: #3788D8;
            color: white;
            padding: 2px 8px;
            border-radius: 3px;
            font-size: 0.75rem;
            font-weight: 600;
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-controller="PsychologistDashboard" asp-action="Index" class="nav-link">Ana Sayfa</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Notifications Dropdown Menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="far fa-bell"></i>
                        <span class="badge badge-warning navbar-badge">3</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <span class="dropdown-item dropdown-header">3 Bildirim</span>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            <i class="fas fa-calendar mr-2"></i> Yeni randevu
                            <span class="float-right text-muted text-sm">3 dk</span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-menu-footer">Tümünü Gör</a>
                    </div>
                </li>
                
                <!-- User Dropdown Menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="far fa-user"></i>
                        <span class="d-none d-md-inline ml-1">@Context.Session.GetString("UserName")</span>
                        <span class="psychologist-badge ml-2">PSİKOLOG</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <a asp-controller="PsychologistProfile" asp-action="Index" class="dropdown-item">
                            <i class="fas fa-user mr-2"></i> Profilim
                        </a>
                        <a asp-controller="PsychologistProfile" asp-action="ChangePassword" class="dropdown-item">
                            <i class="fas fa-key mr-2"></i> Şifre Değiştir
                        </a>
                        <div class="dropdown-divider"></div>
                        <a asp-controller="Account" asp-action="Logout" class="dropdown-item">
                            <i class="fas fa-sign-out-alt mr-2"></i> Çıkış Yap
                        </a>
                    </div>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="#" class="brand-link">
                <img src="~/logo/yasam_logo.png" alt="Yaşam Psikoloji Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text">Yaşam Psikoloji</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/img/default-avatar.png" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">@Context.Session.GetString("UserName")</a>
                        <small class="text-muted">Psikolog</small>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Dashboard -->
                        <li class="nav-item">
                            <a asp-controller="PsychologistDashboard" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>

                        <!-- Randevularım -->
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-calendar-alt"></i>
                                <p>
                                    Randevularım
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="PsychologistAppointment" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Tüm Randevular</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="PsychologistAppointment" asp-action="Calendar" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Takvim Görünümü</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Danışanlarım -->
                        <li class="nav-item">
                            <a asp-controller="PsychologistClient" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>Danışanlarım</p>
                            </a>
                        </li>

                        <!-- Çalışma Saatlerim -->
                        <li class="nav-item">
                            <a asp-controller="PsychologistWorkingHour" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-clock"></i>
                                <p>Çalışma Saatlerim</p>
                            </a>
                        </li>

                        <!-- Profilim -->
                        <li class="nav-header">HESAP</li>
                        <li class="nav-item">
                            <a asp-controller="PsychologistProfile" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-user"></i>
                                <p>Profilim</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="PsychologistProfile" asp-action="Edit" class="nav-link">
                                <i class="nav-icon fas fa-user-edit"></i>
                                <p>Profil Düzenle</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="PsychologistProfile" asp-action="ChangePassword" class="nav-link">
                                <i class="nav-icon fas fa-key"></i>
                                <p>Şifre Değiştir</p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">@ViewData["PageTitle"]</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Ana Sayfa</a></li>
                                <li class="breadcrumb-item active">@ViewData["PageTitle"]</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.content-header -->

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">
            <strong>Copyright &copy; 2024 <a href="#">Yaşam Psikoloji</a>.</strong>
            Tüm hakları saklıdır.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 1.0.0
            </div>
        </footer>
    </div>
    <!-- ./wrapper -->

    <!-- jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.2/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.2.0/js/adminlte.min.js"></script>
    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap4.min.js"></script>
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Toastr -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <!-- Select2 -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <!-- Flatpickr -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/tr.js"></script>

    <script>
        // Global Toastr Configuration
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "3000"
        };

        // DataTables Turkish Language
        $.extend(true, $.fn.dataTable.defaults, {
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json"
            }
        });

        // Select2 Turkish
        $.fn.select2.defaults.set("language", "tr");

        // Flatpickr Turkish
        flatpickr.localize(flatpickr.l10ns.tr);

        // Show TempData messages
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
            toastr.success('@TempData["SuccessMessage"]');
            </text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
            toastr.error('@TempData["ErrorMessage"]');
            </text>
        }
        @if (TempData["InfoMessage"] != null)
        {
            <text>
            toastr.info('@TempData["InfoMessage"]');
            </text>
        }
        @if (TempData["WarningMessage"] != null)
        {
            <text>
            toastr.warning('@TempData["WarningMessage"]');
            </text>
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
