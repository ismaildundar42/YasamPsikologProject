@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Yaşam Psikolog</title>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700;800&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
            background: linear-gradient(135deg, #1a0a0f 0%, #2d1520 50%, #4a1f2e 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
            position: relative;
            overflow-y: auto;
        }

        body::before {
            content: '';
            position: absolute;
            width: 600px;
            height: 600px;
            background: radial-gradient(circle, rgba(212, 175, 55, 0.15) 0%, transparent 70%);
            border-radius: 50%;
            top: -300px;
            right: -200px;
            animation: float 25s infinite ease-in-out;
        }

        body::after {
            content: '';
            position: absolute;
            width: 500px;
            height: 500px;
            background: radial-gradient(circle, rgba(169, 29, 58, 0.2) 0%, transparent 70%);
            border-radius: 50%;
            bottom: -250px;
            left: -150px;
            animation: float 20s infinite ease-in-out reverse;
        }

        .particle {
            position: absolute;
            width: 4px;
            height: 4px;
            background: rgba(212, 175, 55, 0.6);
            border-radius: 50%;
            animation: particleFloat 15s infinite ease-in-out;
            box-shadow: 0 0 10px rgba(212, 175, 55, 0.8);
        }

        .particle:nth-child(1) { top: 20%; left: 10%; animation-delay: 0s; animation-duration: 18s; }
        .particle:nth-child(2) { top: 60%; left: 80%; animation-delay: 2s; animation-duration: 22s; }
        .particle:nth-child(3) { top: 80%; left: 20%; animation-delay: 4s; animation-duration: 20s; }
        .particle:nth-child(4) { top: 30%; left: 70%; animation-delay: 1s; animation-duration: 25s; }
        .particle:nth-child(5) { top: 50%; left: 50%; animation-delay: 3s; animation-duration: 19s; }

        @@keyframes particleFloat {
            0%, 100% { transform: translate(0, 0) scale(1); opacity: 0.6; }
            25% { transform: translate(50px, -50px) scale(1.5); opacity: 1; }
            50% { transform: translate(-30px, -100px) scale(1); opacity: 0.4; }
            75% { transform: translate(70px, -70px) scale(1.3); opacity: 0.8; }
        }

        @@keyframes float {
            0%, 100% { transform: translate(0, 0) rotate(0deg); }
            33% { transform: translate(40px, -40px) rotate(120deg); }
            66% { transform: translate(-30px, 30px) rotate(240deg); }
        }

        .login-container {
            position: relative;
            z-index: 1;
            width: 100%;
            max-width: 1200px;
        }

        .logo-section {
            text-align: center;
            margin-bottom: 35px;
            animation: fadeInDown 0.8s ease-out;
        }

        .logo-section img {
            max-width: 150px;
            height: auto;
            filter: drop-shadow(0 10px 30px rgba(212, 175, 55, 0.4));
            margin-bottom: 15px;
            animation: logoGlow 3s infinite ease-in-out;
        }

        @@keyframes logoGlow {
            0%, 100% { filter: drop-shadow(0 15px 40px rgba(212, 175, 55, 0.4)); }
            50% { filter: drop-shadow(0 15px 50px rgba(212, 175, 55, 0.6)); }
        }

        .logo-section h1 {
            color: #D4AF37;
            font-family: 'Playfair Display', serif;
            font-size: 2.2rem;
            font-weight: 800;
            text-shadow: 0 4px 20px rgba(212, 175, 55, 0.5);
            margin-bottom: 10px;
            letter-spacing: 1px;
        }

        .logo-section p {
            color: rgba(255, 255, 255, 0.85);
            font-size: 1rem;
            font-weight: 300;
            letter-spacing: 0.5px;
        }

        @@keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-40px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .role-selection {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 25px;
            margin-bottom: 30px;
            animation: fadeInUp 0.8s ease-out 0.3s both;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(40px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .role-card {
            background: rgba(169, 29, 58, 0.15);
            backdrop-filter: blur(25px);
            border-radius: 20px;
            padding: 35px 25px;
            text-align: center;
            cursor: pointer;
            transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            border: 2px solid rgba(212, 175, 55, 0.3);
            position: relative;
            overflow: hidden;
        }

        .role-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(212, 175, 55, 0.2) 0%, transparent 100%);
            opacity: 0;
            transition: opacity 0.5s ease;
        }

        .role-card::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(212, 175, 55, 0.1) 0%, transparent 70%);
            opacity: 0;
            transition: opacity 0.5s ease;
        }

        .role-card:hover::before,
        .role-card:hover::after {
            opacity: 1;
        }

        .role-card:hover {
            transform: translateY(-15px) scale(1.03);
            border-color: rgba(212, 175, 55, 0.8);
            box-shadow: 0 25px 70px rgba(212, 175, 55, 0.3), 0 0 50px rgba(169, 29, 58, 0.2);
        }

        .role-card.active {
            background: rgba(169, 29, 58, 0.3);
            border-color: #D4AF37;
            transform: scale(1.05);
            box-shadow: 0 20px 60px rgba(212, 175, 55, 0.4), 0 0 60px rgba(212, 175, 55, 0.3);
        }

        .role-card.disabled {
            opacity: 0.35;
            cursor: not-allowed;
            pointer-events: none;
        }

        .role-icon {
            font-size: 3.5rem;
            background: linear-gradient(135deg, #D4AF37 0%, #F4C430 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 20px;
            filter: drop-shadow(0 5px 15px rgba(212, 175, 55, 0.5));
            transition: all 0.4s ease;
        }

        .role-card:hover .role-icon {
            transform: scale(1.1) rotateY(10deg);
            filter: drop-shadow(0 8px 20px rgba(212, 175, 55, 0.7));
        }

        .role-title {
            color: #D4AF37;
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 10px;
            font-family: 'Playfair Display', serif;
        }

        .role-description {
            color: rgba(255, 255, 255, 0.75);
            font-size: 0.95rem;
            font-weight: 300;
            line-height: 1.5;
        }

        .login-form-container {
            background: rgba(169, 29, 58, 0.2);
            backdrop-filter: blur(35px);
            border-radius: 25px;
            padding: 40px;
            border: 2px solid rgba(212, 175, 55, 0.4);
            box-shadow: 0 30px 90px rgba(0, 0, 0, 0.5), 0 0 60px rgba(212, 175, 55, 0.2);
            animation: fadeInUp 0.8s ease-out 0.5s both;
            display: none;
            position: relative;
            overflow: hidden;
        }

        .login-form-container::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(212, 175, 55, 0.08) 0%, transparent 70%);
            animation: rotate 30s linear infinite;
        }

        @@keyframes rotate {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        .login-form-container.show {
            display: block;
        }

        .form-header {
            text-align: center;
            margin-bottom: 45px;
            position: relative;
            z-index: 1;
        }

        .form-header h2 {
            color: #D4AF37;
            font-size: 2.3rem;
            font-weight: 700;
            margin-bottom: 12px;
            font-family: 'Playfair Display', serif;
            text-shadow: 0 2px 15px rgba(212, 175, 55, 0.4);
        }

        .form-header p {
            color: rgba(255, 255, 255, 0.8);
            font-size: 1.05rem;
            font-weight: 300;
        }

        .form-group {
            margin-bottom: 28px;
            position: relative;
            z-index: 1;
        }

        .form-group label {
            display: block;
            color: #D4AF37;
            font-weight: 600;
            margin-bottom: 12px;
            font-size: 1rem;
            letter-spacing: 0.3px;
        }

        .input-wrapper {
            position: relative;
        }

        .input-wrapper i {
            position: absolute;
            left: 22px;
            top: 50%;
            transform: translateY(-50%);
            color: rgba(212, 175, 55, 0.7);
            font-size: 1.2rem;
            transition: all 0.3s ease;
            pointer-events: none;
            z-index: 2;
        }

        .form-control:focus ~ i,
        .input-wrapper:hover i {
            color: #D4AF37;
        }

        .form-control {
            width: 100%;
            padding: 18px 22px 18px 58px;
            border: 2px solid rgba(212, 175, 55, 0.5);
            border-radius: 18px;
            background: rgba(26, 10, 15, 0.7);
            color: white;
            font-size: 1.05rem;
            transition: all 0.4s ease;
            font-family: 'Inter', sans-serif;
        }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }

        .form-control:focus {
            outline: none;
            border-color: #D4AF37;
            background: rgba(26, 10, 15, 0.85);
            box-shadow: 0 0 0 5px rgba(212, 175, 55, 0.15), 0 8px 25px rgba(212, 175, 55, 0.2);
        }

        .btn-login {
            width: 100%;
            padding: 20px;
            border: none;
            border-radius: 18px;
            background: linear-gradient(135deg, #D4AF37 0%, #F4C430 100%);
            color: #1a0a0f;
            font-size: 1.15rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.4s ease;
            margin-top: 15px;
            box-shadow: 0 12px 35px rgba(212, 175, 55, 0.4);
            position: relative;
            z-index: 1;
            overflow: hidden;
        }

        .btn-login::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transition: left 0.5s ease;
        }

        .btn-login:hover::before {
            left: 100%;
        }

        .btn-login:hover {
            transform: translateY(-3px);
            box-shadow: 0 18px 45px rgba(212, 175, 55, 0.5);
        }

        .btn-login:active {
            transform: translateY(-1px);
        }

        .btn-back {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            color: #D4AF37;
            text-decoration: none;
            font-size: 1rem;
            margin-top: 25px;
            padding: 12px 24px;
            border-radius: 12px;
            background: rgba(212, 175, 55, 0.1);
            border: 1px solid rgba(212, 175, 55, 0.3);
            transition: all 0.3s ease;
            position: relative;
            z-index: 1;
        }

        .btn-back:hover {
            background: rgba(212, 175, 55, 0.2);
            border-color: rgba(212, 175, 55, 0.5);
            transform: translateX(-8px);
            box-shadow: 0 5px 20px rgba(212, 175, 55, 0.2);
        }

        .alert {
            padding: 18px 24px;
            border-radius: 15px;
            margin-bottom: 28px;
            font-size: 1rem;
            animation: slideInDown 0.5s ease-out;
            position: relative;
            z-index: 1;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        @@keyframes slideInDown {
            from {
                opacity: 0;
                transform: translateY(-25px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .alert-danger {
            background: rgba(220, 38, 38, 0.25);
            border: 2px solid rgba(239, 68, 68, 0.6);
            color: #fecaca;
        }

        .alert-success {
            background: rgba(34, 197, 94, 0.25);
            border: 2px solid rgba(34, 197, 94, 0.6);
            color: #bbf7d0;
        }

        @@media (max-width: 768px) {
            .logo-section h1 {
                font-size: 2.2rem;
            }

            .role-selection {
                grid-template-columns: 1fr;
                gap: 25px;
            }

            .login-form-container {
                padding: 35px 25px;
            }

            .form-header h2 {
                font-size: 1.8rem;
            }

            .role-icon {
                font-size: 3.5rem;
            }
        }
    </style>
</head>
<body>
    <!-- Floating particles -->
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>

    <div class="login-container">
        <div class="logo-section">
            <img src="~/logo/yasam_logo.png" alt="Yaşam Psikolog Logo" />
            <h1>Yaşam Psikolog</h1>
            <p>Profesyonel Psikolojik Danışmanlık Platformu</p>
        </div>

        <div id="roleSelection" class="role-selection">
            <div class="role-card" data-role="1" onclick="selectRole(1)">
                <div class="role-icon">
                    <i class="fas fa-user-shield"></i>
                </div>
                <div class="role-title">Süper Admin</div>
                <div class="role-description">Sistem yönetimi ve kontrol paneli</div>
            </div>

            <div class="role-card" data-role="2" onclick="selectRole(2)">
                <div class="role-icon">
                    <i class="fas fa-user-md"></i>
                </div>
                <div class="role-title">Psikolog</div>
                <div class="role-description">Danışan yönetimi ve randevu takibi</div>
            </div>

            <div class="role-card disabled" data-role="3">
                <div class="role-icon">
                    <i class="fas fa-user"></i>
                </div>
                <div class="role-title">Danışan</div>
                <div class="role-description">Yakında aktif olacak</div>
            </div>
        </div>

        <div id="loginForm" class="login-form-container">
            <div class="form-header">
                <h2 id="formTitle">Giriş Yap</h2>
                <p id="formSubtitle">Hesabınıza giriş yapın</p>
            </div>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i>
                    <span>@TempData["ErrorMessage"]</span>
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i>
                    <span>@TempData["SuccessMessage"]</span>
                </div>
            }

            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                
                <input type="hidden" id="selectedRole" name="role" value="" />

                <div class="form-group">
                    <label for="email">E-posta Adresi</label>
                    <div class="input-wrapper">
                        <i class="fas fa-envelope"></i>
                        <input type="email" 
                               class="form-control" 
                               id="email" 
                               name="email" 
                               placeholder="ornek@email.com" 
                               required 
                               autocomplete="email" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="password">Şifre</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock"></i>
                        <input type="password" 
                               class="form-control" 
                               id="password" 
                               name="password" 
                               placeholder="••••••••" 
                               required 
                               autocomplete="current-password" />
                    </div>
                </div>

                <button type="submit" class="btn-login">
                    <i class="fas fa-sign-in-alt"></i> Giriş Yap
                </button>

                <a href="javascript:void(0)" onclick="backToRoles()" class="btn-back">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
            </form>
        </div>
    </div>

    <script type="text/javascript">
        var selectedRoleValue = null;

        function selectRole(role) {
            selectedRoleValue = role;
            
            // Update active state
            var cards = document.querySelectorAll('.role-card');
            for (var i = 0; i < cards.length; i++) {
                cards[i].classList.remove('active');
            }
            document.querySelector('[data-role="' + role + '"]').classList.add('active');

            // Update form title
            var titles = {
                1: { title: 'Süper Admin Girişi', subtitle: 'Sistem yönetim paneline giriş yapın' },
                2: { title: 'Psikolog Girişi', subtitle: 'Psikolog paneline giriş yapın' },
                3: { title: 'Danışan Girişi', subtitle: 'Danışan paneline giriş yapın' }
            };

            document.getElementById('formTitle').textContent = titles[role].title;
            document.getElementById('formSubtitle').textContent = titles[role].subtitle;
            document.getElementById('selectedRole').value = role;

            // Show login form with animation
            setTimeout(function() {
                document.getElementById('roleSelection').style.display = 'none';
                document.getElementById('loginForm').classList.add('show');
                document.getElementById('email').focus();
            }, 300);
        }

        function backToRoles() {
            document.getElementById('loginForm').classList.remove('show');
            setTimeout(function() {
                document.getElementById('roleSelection').style.display = 'grid';
                var cards = document.querySelectorAll('.role-card');
                for (var i = 0; i < cards.length; i++) {
                    cards[i].classList.remove('active');
                }
                selectedRoleValue = null;
            }, 300);
        }
        // Auto-focus email on page load if there's an error
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
            window.addEventListener('DOMContentLoaded', () => {
                if (selectedRoleValue) {
                    selectRole(selectedRoleValue);
                }
            });
            </text>
        }
    </script>
</body>
</html>
