@model List<YasamPsikologProject.WebUi.Models.DTOs.PsychologistArchiveDto>
@{
    Layout = "_AdminLayout";
    ViewData["PageTitle"] = "Arşivlenmiş Psikologlar";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-archive"></i> Arşivlenmiş Psikologlar
                </h3>
                <div class="card-tools">
                    <span class="badge badge-info">Toplam: @Model.Count</span>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <i class="icon fas fa-ban"></i> @TempData["ErrorMessage"]
                    </div>
                }

                <table id="archiveTable" class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Ad Soyad</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>Renk</th>
                            <th>Oluşturulma</th>
                            <th>Arşivlenme</th>
                            <th>Sebep</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var archive in Model)
                        {
                            <tr>
                                <td>@archive.OriginalPsychologistId</td>
                                <td>
                                    <strong>@archive.FirstName @archive.LastName</strong>
                                    <br />
                                    <small class="text-muted">(Eski Psikolog)</small>
                                </td>
                                <td>@archive.Email</td>
                                <td>@archive.PhoneNumber</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(archive.CalendarColor))
                                    {
                                        <span class="badge" style="background-color: @archive.CalendarColor; color: white;">
                                            @archive.CalendarColor
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (archive.OriginalCreatedAt.HasValue)
                                    {
                                        @archive.OriginalCreatedAt.Value.ToString("dd.MM.yyyy HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge badge-warning">
                                        @archive.ArchivedAt.ToString("dd.MM.yyyy HH:mm")
                                    </span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(archive.ArchivedReason))
                                    {
                                        <small>@archive.ArchivedReason</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Belirtilmemiş</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="ArchiveAppointments" asp-route-psychologistId="@archive.OriginalPsychologistId" 
                                       class="btn btn-info btn-sm" title="Randevuları Görüntüle">
                                        <i class="fas fa-calendar-alt"></i> Randevular
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // DataTable başlat
            $('#archiveTable').DataTable({
                responsive: true,
                pageLength: 25,
                order: [[6, 'desc']], // Arşivlenme tarihine göre azalan sırada
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json'
                },
                columnDefs: [
                    {
                        targets: [5, 6], // Tarih sütunları
                        type: 'date'
                    },
                    {
                        targets: [8], // İşlemler sütunu
                        orderable: false
                    }
                ]
            });
        });
    </script>
}
