@model YasamPsikologProject.WebUi.Models.DTOs.PsychologistDto
@{
    Layout = "_AdminLayout";
    ViewData["PageTitle"] = Model?.Id > 0 ? "Psikolog Düzenle" : "Yeni Psikolog";
    var isEdit = Model?.Id > 0;
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">@ViewData["PageTitle"]</h3>
            </div>
            <form asp-action="@(isEdit ? "Edit" : "Create")" method="post">
                @if (isEdit)
                {
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="UserId" />
                }
                
                <div class="card-body">
                    <!-- Kullanıcı Bilgileri -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Ad *</label>
                                <input type="text" class="form-control" name="User.FirstName" value="@Model?.User?.FirstName" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Soyad *</label>
                                <input type="text" class="form-control" name="User.LastName" value="@Model?.User?.LastName" required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Email *</label>
                                <input type="email" class="form-control" name="User.Email" value="@Model?.User?.Email" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Telefon *</label>
                                <input type="tel" class="form-control" name="User.PhoneNumber" value="@Model?.User?.PhoneNumber" required>
                            </div>
                        </div>
                    </div>

                    <!-- Psikolog Bilgileri -->
                    <hr>
                    <h5 class="mb-3">Uzmanlık Bilgileri</h5>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Uzmanlık Alanı *</label>
                                <input type="text" class="form-control" asp-for="Specialization" placeholder="Klinik Psikoloji, Aile Terapisi vb." required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Lisans Numarası *</label>
                                <input type="text" class="form-control" asp-for="LicenseNumber" placeholder="TR-PSY-12345" required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Seans Ücreti (₺) *</label>
                                <input type="number" step="0.01" class="form-control" asp-for="ConsultationFee" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Takvim Rengi *</label>
                                <input type="color" class="form-control" asp-for="CalendarColor" value="@(Model?.CalendarColor ?? "#4CAF50")" required>
                                <small class="form-text text-muted">Randevu takviminizde görünecek renk</small>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" asp-for="IsActive" checked>
                            <label class="custom-control-label" for="IsActive">Aktif</label>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('form').on('submit', function(e) {
                var submitBtn = $(this).find('button[type="submit"]');
                submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Kaydediliyor...');
            });
        });
    </script>
}
