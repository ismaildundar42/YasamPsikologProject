@model List<YasamPsikologProject.WebUi.Models.DTOs.PsychologistDto>
@{
    Layout = "_AdminLayout";
    ViewData["PageTitle"] = "Psikolog Y√∂netimi";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Psikologlar</h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> Yeni Psikolog Ekle
                    </a>
                </div>
            </div>
            <div class="card-body">
                <table id="psychologistTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Ad Soyad</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>Renk</th>
                            <th>Durum</th>
                            <th>ƒ∞≈ülemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var psychologist in Model)
                        {
                            <tr>
                                <td>@psychologist.Id</td>
                                <td>@psychologist.User?.FirstName @psychologist.User?.LastName</td>
                                <td>@psychologist.User?.Email</td>
                                <td>@psychologist.User?.PhoneNumber</td>
                                <td>
                                    <span class="badge" style="background-color: @psychologist.CalendarColor; color: white;">
                                        @psychologist.CalendarColor
                                    </span>
                                </td>
                                <td>
                                    @if (psychologist.IsActive)
                                    {
                                        <span class="badge badge-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@psychologist.Id" class="btn btn-info btn-sm" title="Detaylar">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@psychologist.Id" class="btn btn-primary btn-sm" title="D√ºzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-danger btn-sm btn-delete" 
                                                data-id="@psychologist.Id" 
                                                data-name="@psychologist.User?.FirstName @psychologist.User?.LastName"
                                                data-email="@psychologist.User?.Email"
                                                title="Sil">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .swal-wide {
            width: 600px !important;
        }
        
        .swal2-html-container {
            overflow: visible !important;
        }
        
        .btn-group .btn {
            margin: 0 2px;
        }
    </style>
    
    <script>
        $(document).ready(function() {
            // DataTable
            var table = $('#psychologistTable').DataTable({
                responsive: true,
                pageLength: 10,
                order: [[0, 'desc']],
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json'
                }
            });

            // Delete confirmation
            $(document).on('click', '.btn-delete', function() {
                var id = $(this).data('id');
                var name = $(this).data('name');
                var email = $(this).data('email');
                
                Swal.fire({
                    title: '<strong>‚ö†Ô∏è Psikolog Silinecek!</strong>',
                    html: `
                        <div style="text-align: left; padding: 20px;">
                            <div style="background: #f8f9fa; padding: 15px; border-radius: 8px; margin-bottom: 15px;">
                                <p style="margin: 5px 0;"><strong>üë§ Ad Soyad:</strong> ${name}</p>
                                <p style="margin: 5px 0;"><strong>üìß Email:</strong> ${email}</p>
                            </div>
                            <div style="background: #fff3cd; padding: 15px; border-radius: 8px; border-left: 4px solid #ffc107;">
                                <p style="margin: 0; color: #856404;">
                                    <strong>‚ö†Ô∏è Dikkat:</strong> Bu i≈ülem geri alƒ±namaz!
                                </p>
                                <p style="margin: 5px 0 0 0; color: #856404; font-size: 0.9em;">
                                    ‚Ä¢ Psikoloƒüa ait t√ºm randevular silinecek<br>
                                    ‚Ä¢ T√ºm √ßalƒ±≈üma saatleri silinecek<br>
                                    ‚Ä¢ ƒ∞li≈ükili t√ºm veriler kaldƒ±rƒ±lacak
                                </p>
                            </div>
                        </div>
                    `,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: '<i class="fas fa-trash"></i> Evet, Sil!',
                    cancelButtonText: '<i class="fas fa-times"></i> ƒ∞ptal',
                    customClass: {
                        popup: 'swal-wide',
                        confirmButton: 'btn btn-danger btn-lg',
                        cancelButton: 'btn btn-secondary btn-lg'
                    },
                    buttonsStyling: false,
                    showLoaderOnConfirm: true,
                    preConfirm: () => {
                        return $.ajax({
                            url: '@Url.Action("Delete")/' + id,
                            type: 'POST',
                            success: function(response) {
                                return response;
                            },
                            error: function() {
                                Swal.showValidationMessage('ƒ∞≈ülem sƒ±rasƒ±nda hata olu≈ütu.');
                            }
                        });
                    },
                    allowOutsideClick: () => !Swal.isLoading()
                }).then((result) => {
                    if (result.isConfirmed) {
                        if (result.value.success) {
                            Swal.fire({
                                title: '‚úÖ Ba≈üarƒ±lƒ±!',
                                html: `<p style="font-size: 1.1em;">${result.value.message}</p>`,
                                icon: 'success',
                                confirmButtonColor: '#28a745',
                                confirmButtonText: 'Tamam',
                                timer: 2000,
                                timerProgressBar: true
                            }).then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire({
                                title: '‚ùå Hata!',
                                text: result.value.message,
                                icon: 'error',
                                confirmButtonColor: '#d33',
                                confirmButtonText: 'Tamam'
                            });
                        }
                    }
                });
            });

            // Success/Error messages
            @if (TempData["SuccessMessage"] != null)
            {
                <text>toastr.success('@TempData["SuccessMessage"]');</text>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <text>toastr.error('@TempData["ErrorMessage"]');</text>
            }
        });
    </script>
}
